<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
  metadata-complete="false">

  <display-name>Moja prva aplikacija</display-name>
  <description>
     Prva aplikacija
  </description>

  <servlet>
  	<servlet-name>pollsServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.PollsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>glasanjeServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>redirectionServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.RedirectionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>glasanjeGlasajServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeGlasajServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>glasanjeRezultatiServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeRezultatiServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>glasanjeGrafikaServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeGrafikaServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>glasanjeXLSServlet</servlet-name>
  	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeXLSServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>pollsServlet</servlet-name>
  	<url-pattern>/servleti/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>glasanjeServlet</servlet-name>
  	<url-pattern>/servleti/glasanje</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>redirectionServlet</servlet-name>
  	<url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>redirectionServlet</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>glasanjeGlasajServlet</servlet-name>
  	<url-pattern>/servleti/glasanje-glasaj</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>glasanjeRezultatiServlet</servlet-name>
  	<url-pattern>/servleti/glasanje-rezultati</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>glasanjeGrafikaServlet</servlet-name>
  	<url-pattern>/servleti/glasanje-grafika</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>glasanjeXLSServlet</servlet-name>
  	<url-pattern>/servleti/glasanje-xls</url-pattern>
  </servlet-mapping>

</web-app>